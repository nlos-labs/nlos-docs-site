# NLOS Platform Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values
# All public variables must be prefixed with NEXT_PUBLIC_

# ============================================================================
# Application Settings
# ============================================================================
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=NLOS Platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# Supabase Configuration (Public)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# API Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Feature Flags
# ============================================================================
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# ============================================================================
# Analytics & Monitoring
# ============================================================================
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================================================
# External Services (Public)
# ============================================================================
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=

# ============================================================================
# Server-side Only (No NEXT_PUBLIC_ prefix)
# ============================================================================
# These are only available in API routes and server-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
OPENAI_API_KEY=sk-placeholder-key-here
STRIPE_SECRET_KEY=
DATABASE_URL=postgresql://user:password@localhost:5432/nlos_db
REDIS_URL=redis://localhost:6379
